<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_speaker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.netforceinfotech.admindashboard.Speaker.AddSpeaker">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:textSize="@dimen/admin_header"
      android:layout_marginBottom="15dp"
      android:text="Add Speaker Details"/>


  <EditText
      android:hint="Name"
      android:inputType="textCapWords"
      android:id="@+id/nameEditText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />


  <EditText
      android:id="@+id/dobEditText"
      android:hint="Choose Birthday"
      android:inputType="textCapWords"
      android:clickable="true"
      android:focusable="false"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <EditText
      android:id="@+id/birthplaceEditText"
      android:hint="Birth Place"
      android:inputType="textCapWords"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <Spinner
      android:id="@+id/prioritySpinner"
      android:hint="Choose Priority "
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:spinnerMode="dropdown"/>

  <EditText
      android:id="@+id/descriptionEditText"
      android:lines="4"
      android:gravity="start"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Description....."
      android:inputType="text|textMultiLine|textCapWords"/>


  <Button
      android:id="@+id/profileButton"
      android:layout_marginBottom="10dp"
      android:text="Add Profile Image"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  <Button
      android:id="@+id/submitButton"
      android:layout_marginBottom="10dp"
      android:text="Submit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  <ImageView
      android:id="@+id/imageViewDp"
      android:layout_width="match_parent"
      android:layout_height="240dp" />





</LinearLayout>
